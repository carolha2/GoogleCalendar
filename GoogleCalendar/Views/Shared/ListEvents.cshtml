@using GoogleCalendar.Models;
@model IEnumerable<Event>

<h2>Calendar Events</h2>
@if (Model.Count() != 0)
{
<div class="row">
    <table border="1" style="width:100%">
        <thead>
            <tr>
                <th>Summary</th>
                <th>Description</th>
                <th>Start Time</th>
                <th>Start TimeZone</th>
                <th>End Time</th>
                <th>Start TimeZone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var calendarEvent in Model)
            {
            <tr>
                <td>@calendarEvent.Summary</td>
                <td>@calendarEvent.Description</td>
                <td>@DateTime.Parse(calendarEvent.Start.DateTime).ToString("dd-MMM-yyyy hh:mm")) </td>
                <td>(@calendarEvent.Start.TimeZone)</td>
                <td>@DateTime.Parse(calendarEvent.End.DateTime).ToString("dd-MMM-yyyy hh:mm")) </td>
                <td>(@calendarEvent.End.TimeZone)</td>
            </tr>
        }
            </tbody>
        </table>
    </div>
}
else
{
    <div style="margin: 30px; font-size: 20px;">
        No Events
    </div>
}
